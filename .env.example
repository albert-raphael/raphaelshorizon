# Environment Variables for Raphael's Horizon Production
# Copy this file to /opt/raphaelshorizon/.env on your Digital Ocean server

# Database
MONGO_URI=mongodb://your_mongodb_connection_string

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend URL
FRONTEND_URL=https://raphaelshorizon.vercel.app

# Service URLs (internal)
AUDIOBOOKSHELF_URL=/audiobookshelf
CALIBRE_WEB_URL=/calibre

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_MODE=live

# Stripe Configuration
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key