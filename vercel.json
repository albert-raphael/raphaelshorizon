{
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.raphaelshorizon.com/api/:path*"
    },
    {
      "source": "/audiobookshelf/:path*",
      "destination": "https://api.raphaelshorizon.com/audiobookshelf/:path*"
    },
    {
      "source": "/calibre/:path*",
      "destination": "https://api.raphaelshorizon.com/calibre/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ]
}
