{
  "version": 2,
  "builds": [
    { "src": "**/*", "use": "@vercel/static" }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/audiobookshelf/:path*",
      "headers": []
    },
    {
      "source": "/calibre/:path*",
      "headers": []
    },
    {
      "source": "/js/config.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/login_admin",
      "destination": "/pages/admin/login_admin.html",
      "permanent": true
    },
    {
      "source": "/admin",
      "destination": "/pages/admin/login_admin.html",
      "permanent": false
    },
    {
      "source": "/admin-login",
      "destination": "/pages/admin/login_admin.html",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "http://159.223.27.101/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "http://159.223.27.101/uploads/:path*"
    },
    {
      "source": "/audiobookshelf",
      "destination": "http://159.223.27.101/audiobookshelf/"
    },
    {
      "source": "/audiobookshelf/:path*",
      "destination": "http://159.223.27.101/audiobookshelf/:path*"
    },
    {
      "source": "/calibre",
      "destination": "http://159.223.27.101/calibre/"
    },
    {
      "source": "/calibre/:path*",
      "destination": "http://159.223.27.101/calibre/:path*"
    }
  ]
}